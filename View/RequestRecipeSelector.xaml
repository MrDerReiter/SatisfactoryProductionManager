<Window x:Class="SatisfactoryProductionManager.RequestRecipeSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SatisfactoryProductionManager"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type local:RequestRecipeSelectorVM}}"
        Title="RequestRecipeSelector"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Width="400"
        Height="300">
    

    <Border Style="{StaticResource WindowBorder}">

        <StackPanel>

            <TextBlock Style="{StaticResource WindowHeaderText}"
                       Text="Выберите рецепт" />

            <ItemsControl ItemsSource="{Binding RecipeButtons}"
                          ItemTemplate="{StaticResource RecipeSelectButtonTemplate}"
                          Margin="10,20,10,10">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
    </Border>

</Window>
