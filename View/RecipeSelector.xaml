<Window x:Class="SatisfactoryProductionManager.RecipeSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SatisfactoryProductionManager"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="RecipeSelector"
        Width="580"
        Height="380">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Стили -->
            <Style x:Key="TabConrolBase"
                   TargetType="TabControl">

                <Setter Property="Background"
                        Value="Transparent"/>
                <Setter Property="BorderThickness"
                        Value="0" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="10, 20, 10, 10" />
                <Setter Property="SelectedIndex"
                        Value="0" />
            </Style>
            <Style x:Key="TabItemBorder"
                   TargetType="Border">

                <Setter Property="BorderBrush"
                        Value="Chocolate" />
                <Setter Property="Background"
                        Value="DarkGray" />
                <Setter Property="BorderThickness"
                        Value="1" />
                <Setter Property="Margin"
                        Value="-8,-3,-8,-5" />
                <Setter Property="Padding"
                        Value="3" />
                <Setter Property="Width"
                        Value="40" />
                <Setter Property="Height"
                        Value="40" />
            </Style>

            <!-- Шаблоны -->
            <DataTemplate x:Key="TabItemHeaderTemplate">
                <Border Style="{StaticResource TabItemBorder}"
                        ToolTip="{Binding ViewName}">

                    <Image Source="{Binding Image}"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Width="30"
                           Height="30" />
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="TabItemPageTemplate">
                <Border Style="{StaticResource SubpanelBorder}"
                        Margin="-2,2">
                    
                    <ItemsControl ItemsSource="{Binding RecipeButtons}"
                                  ItemTemplate="{StaticResource RecipeSelectButtonTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <local:RecipeSelectorVM/>
    </Window.DataContext>

    <Border Style="{StaticResource WindowBorder}">

        <DockPanel>
            <TextBlock Style="{StaticResource WindowHeaderText}"
                       DockPanel.Dock="Top"
                       Text="Выберите рецепт" />

            <TabControl Style="{StaticResource TabConrolBase}"
                        ItemsSource="{Binding Categories}"
                        ItemTemplate="{StaticResource TabItemHeaderTemplate}"
                        ContentTemplate="{StaticResource TabItemPageTemplate}" />
        </DockPanel>
    </Border>
</Window>
