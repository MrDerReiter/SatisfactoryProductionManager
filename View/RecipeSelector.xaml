<Window x:Class="SatisfactoryProductionManager.View.RecipeSelector"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ViewModel="clr-namespace:SatisfactoryProductionManager.ViewModel"
		mc:Ignorable="d"
		AllowsTransparency="True" Background="Transparent" WindowStyle="None"
		Title="RecipeSelector" MinWidth="580" MinHeight="350" Width="580" Height="370"
		WindowStartupLocation="CenterScreen">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <ViewModel:RecipeSelectorVM/>
    </Window.DataContext>

    <Window.Resources>
        <ToolTip
            x:Key="RecipeTooltip"
            Background="LightGray"
            MaxWidth="250"
            Padding="10">

            <StackPanel>

                <TextBlock
					HorizontalAlignment="Center"
					TextAlignment="Center"
					FontStyle="Italic"
					FontWeight="Bold"
					FontSize="15"
                    TextWrapping="Wrap"
					Text="{Binding Path=Tooltip.Title}"/>

                <TextBlock
					Margin="0,5"
					HorizontalAlignment="Left"
					Text="Продукция:"/>

                <ItemsControl
                    ItemsSource="{Binding Path=Tooltip.Outputs}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <StackPanel
                                Orientation="Horizontal"
                                Margin="5,0,5,3"
                                Height="30">

                                <Image
                                    Source="{Binding Path=Image}"
                                    RenderOptions.BitmapScalingMode="HighQuality"/>

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Margin="30,0,0,0"
                                    Text="{Binding Path=Count}"/>

                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock
                    Margin="0,5"
                    HorizontalAlignment="Left"
                    Text="Ингредиенты:"/>

                <ItemsControl
                    ItemsSource="{Binding Path=Tooltip.Inputs}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <StackPanel
                                Orientation="Horizontal"
                                Margin="5,0,5,3"
                                Height="30">

                                <Image
                                    Source="{Binding Path=Image}"
                                    RenderOptions.BitmapScalingMode="HighQuality"/>

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Margin="30,0,0,0"
                                    Text="{Binding Path=Count}"/>

                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>

            </StackPanel>
        </ToolTip>
    </Window.Resources>

